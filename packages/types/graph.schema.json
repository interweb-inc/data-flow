{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GraphSchemata",
  "definitions": {
    "Metadata": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "EdgeEndpoint": {
      "type": "object",
      "properties": {
        "node": {
          "type": "string"
        },
        "port": {
          "type": "string"
        }
      },
      "required": [
        "node",
        "port"
      ]
    },
    "Value": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "value": { }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "Group": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "nodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "meta": {
          "$ref": "#/definitions/Metadata"
        }
      },
      "required": [
        "name",
        "nodes"
      ]
    },
    "Node": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "context": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Value"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Value"
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Value"
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Edge"
          }
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Node"
          }
        },
        "meta": {
          "$ref": "#/definitions/Metadata"
        }
      },
      "required": [
        "name",
        "type",
        "context",
        "category"
      ]
    },
    "Edge": {
      "type": "object",
      "properties": {
        "src": {
          "$ref": "#/definitions/EdgeEndpoint"
        },
        "dst": {
          "$ref": "#/definitions/EdgeEndpoint"
        }
      },
      "required": [
        "src", "dst"
      ]
    }
  }
}